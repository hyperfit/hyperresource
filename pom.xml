      <id>drdamour</id>
      <name>drdamour</name>
      <email>drdamour@gmail.com</email>
      <url>https://talkshowhost.net</url>
    </developer>
    <developer>
      <id>VitalizeOSS</id>
      <name>Vitalize OSS</name>
      <email>oss@vitalize.com</email>
      <url>https://bodybuilding.com</url>
    </developer>
  </developers>

</project>
